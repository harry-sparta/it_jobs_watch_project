
{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_KEY_ID`}}"
    },
    "builders": [
        {
            "ami_name": "harry-li-eng48-python3-packer-chef-itjobswatch{{timestamp}}",
            "instance_type": "t2.micro",

            "region": "eu-west-1",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "ssh_keypair_name": "harry-li-eng48-first-key",
            "ssh_agent_auth": "true",

            "subnet_id": "subnet-05f17c9de25b45b3a",
            "associate_public_ip_address": "true",

            "source_ami_filter": {
              "filters": {
              "virtualization-type": "hvm",
              "name": "*ubuntu-bionic-18.04-amd64-server-*",
              "root-device-type": "ebs"
              },
              "owners": ["099720109477"],
              "most_recent": true
            },
            "ssh_username": "ubuntu",
            "type": "amazon-ebs"
        }
      ],
      "provisioners": [
        {
            "type": "chef-solo",
            "execute_command": "{{if .Sudo}}sudo {{end}}chef-client --no-color -c {{.ConfigPath}} -j {{.JsonPath}} --chef-license accept-no-persist",
            "cookbook_paths": ["./berks-cookbooks"],
            "run_list": ["provisioning_vagrant::default"],
        },
        {
            "type": "file",
            "source": "../../development",
            "destination": "/home/ubuntu/development"
        }
      ]
}
